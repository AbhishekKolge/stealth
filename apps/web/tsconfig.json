{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@workspace/ui/*": [
        "../../packages/ui/src/*"
      ]
    },
    "allowJs": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./.next/types/**/*.ts",
    "./next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ],
  "references": [
    {
      "path": "../server"
    }
  ]
}
